%h1
  %span.mdi.mdi-cards
  Blog
%br
- if user_signed_in?
  = link_to 'New Article', new_article_path, class: 'btn btn-success'
  %br
  %br
.card
  %ul.list-group.list-group-flush
    - @articles.each do |article|
      %li.list-group-item.clearfix
        = link_to article do
          .float-xs-left
            = article.title
          .float-xs-right
            = image_tag article.image.url(:small), class: 'img-fluid rounded'              - if user_signed_in?
                %br
                = link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary'
                = link_to 'Delete', article, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'
