.row
  .col-md-4
    .card.bg-primary
      .card-block
        %h1 ぶ先生
        %h5= simple_format t('.header')
        %p= simple_format t('.sub_header')
      .col-md-6
        .row
          .col-xs-6
            = image_tag 'bret.gif', class: 'img-full', alt: 'Bret Mayer'
          .col-xs-6
            = image_tag 'pascal.gif', class: 'img-full', alt: 'Pascal Pixel'
.row
  .col-md-6
    .card
      .card-block
        %h5.card-title
          -# %span.mdi-video
          = t('.latest_video')
        - @videos.each do |video|
          = link_to video do
            .embed-responsive.embed-responsive-16by9
              %iframe{allowfullscreen: "", src: "https://www.youtube.com/embed/#{video.tag}", class: 'embed-responsive-item'}
  .col-md-6
    .card
      .card-block
        %h5.card-title
          -# %span.mdi-cards
          = t('.latest_article')
        - @articles.each do |article|
          = link_to article do
            = image_tag article.image.url(:medium), class: 'img-fluid rounded'
            %p= simple_format article.blurb
.clearfix.mt-1.mb-1
  %h4.float-xs-left.text-success
    -# %span.mdi-dictionary
    = t('actions.vocabulary')
  = link_to t('actions.more') + ' ' + t('actions.vocabulary'), vocabulary_path, class: 'btn btn-success float-xs-right'
- @vocabulary.each_slice(2) do |row|
  .row
    - row.each do |item|
      .col-lg-6
        = render partial: 'shared/card', locals: { item: item }
.clearfix.mt-1.mb-1
