!!! 5
%html{lang: I18n.locale}
  %head
    %meta{"http-equiv" => "Content-Type", :content => "text/html;charset=utf-8"}
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no'}
    %meta{:'http-equiv' => 'x-ua-compatible', content: 'ie=edge'}
    = csrf_meta_tags
    %title= t('seo.brand')
    %meta{name: 'description', content: t('seo.description')}
    %meta{name: "google", content: "notranslate"}
    %meta{name: 'author', content: t('seo.author')}
    %meta{name: 'keywords', content: t('seo.keywords')}

    %link{href: "/apple-icon-57x57.png", rel: "apple-touch-icon", sizes: "57x57"}
    %link{href: "/apple-icon-60x60.png", rel: "apple-touch-icon", sizes: "60x60"}
    %link{href: "/apple-icon-72x72.png", rel: "apple-touch-icon", sizes: "72x72"}
    %link{href: "/apple-icon-76x76.png", rel: "apple-touch-icon", sizes: "76x76"}
    %link{href: "/apple-icon-114x114.png", rel: "apple-touch-icon", sizes: "114x114"}
    %link{href: "/apple-icon-120x120.png", rel: "apple-touch-icon", sizes: "120x120"}
    %link{href: "/apple-icon-144x144.png", rel: "apple-touch-icon", sizes: "144x144"}
    %link{href: "/apple-icon-152x152.png", rel: "apple-touch-icon", sizes: "152x152"}
    %link{href: "/apple-icon-180x180.png", rel: "apple-touch-icon", sizes: "180x180"}
    %link{href: "/android-icon-192x192.png", rel: "icon", sizes: "192x192", :type => "image/png"}
    %link{href: "/favicon-32x32.png", rel: "icon", sizes: "32x32", :type => "image/png"}
    %link{href: "/favicon-96x96.png", rel: "icon", sizes: "96x96", :type => "image/png"}
    %link{href: "/favicon-16x16.png", rel: "icon", sizes: "16x16", :type => "image/png"}
    %link{href: "/manifest.json", rel: "manifest"}
    %meta{content: "#00b9b3", name: "msapplication-TileColor"}
    %meta{content: "/ms-icon-144x144.png", name: "msapplication-TileImage"}
    %meta{content: "#00b9b3", name: "theme-color"}

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

  %body{id: params[:controller], class: params[:action]}
    .wrapper
      = render partial: 'shared/navbar'
      = render partial: 'shared/flash'
      .alert.alert-danger
        - if I18n.locale == :ja
          %b お知らせ!
          サイトを移動しました→
        - else
          %b Attention!
          My database and learning materials have moved to a new site:
        %a{href: "http://kanjirpg.com", alt: 'kanjiRPG'} kanjiRPG
      %br
      .container-fluid
        = yield
        %br
        %br
      .push
    .footer
      = render partial: 'shared/footer'

    :javascript
