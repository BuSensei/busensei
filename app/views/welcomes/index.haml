    .clearfix.mt-1.mb-1
      %h4.float-xs-left
        %span.mdi.mdi-cat
        = t('actions.idioms')
      = link_to t('actions.more') + ' ' + t('actions.idioms'), idioms_path, class: 'btn btn-secondary float-xs-right'
    - @idioms.each_slice(2) do |row|
      .row
        - row.each do |item|
